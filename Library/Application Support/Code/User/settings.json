{
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Hopscotch",
    "workbench.colorCustomizations": {
        "editor.background": "#1b1b1f"
    },
    "workbench.panel.defaultLocation": "bottom",
    "workbench.editor.enablePreview": false,
    "search.followSymlinks": false,
    "search.quickOpen.includeSymbols": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/webpack_bundles": true,
        "tmp": true,
    },
    "editor.tabSize": 2,
    "editor.minimap.renderCharacters": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
    "ruby.lint": {
        "rubocop": true
    },
    "ruby.codeCompletion": "rcodetools",
    "ruby.intellisense": "rubyLocate",
    "extensions.ignoreRecommendations": true,
    "window.title": "${rootName}${separator}${activeEditorMedium}",
    "explorer.sortOrder": "mixed",
    "railsTestRunner.rspecCommand": "bin/rspec",
    "workbench.startupEditor": "newUntitledFile",
    "files.trimTrailingWhitespace": true,
    "window.zoomLevel": 0,
    "gitlens.advanced.messages": {
        "suppressWelcomeNotice": true,
        "suppressShowKeyBindingsNotice": true
    },
    // "gitlens.codeLens.enabled": false,
    // "gitlens.keymap": "alternate",
    // "jshint.options": {
    //     "esversion": 6
    // },
    // "python.disablePromptForFeatures": [
    //     "pylint"
    // ],
    "terminal.integrated.fontFamily": "DroidSansMono Nerd Font",
    //-------- Remote VSCode configuration --------
    // Port number to use for connection.
    "remote.port": 52698,
    // Launch the server on start up.
    "remote.onstartup": true,
    // Address to listen on.
    "remote.host": "127.0.0.1",
    // If set to true, error for remote.port already in use won't be shown anymore.
    "remote.dontShowPortAlreadyInUseError": false,
}
